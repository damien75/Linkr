<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sara.damien.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="sara.damien.app.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sara.damien.app.WelcomeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="sara.damien.app.TopicActivity"
            android:label="@string/title_activity_topic"
            android:parentActivityName="sara.damien.app.WelcomeActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.RequestsActivity"
            android:label="@string/title_activity_suggestions"
            android:parentActivityName="sara.damien.app.WelcomeActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:parentActivityName="sara.damien.app.WelcomeActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.DisplayProfileActivity"
            android:label="@string/title_activity_display_profile"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="sara.damien.app.Requests2Activity"
            android:label="@string/title_activity_requests2"
            android:parentActivityName="sara.damien.app.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.DefinitiveProfileActivity"
            android:label="@string/title_activity_definitive_profile" >
        </activity>
        <activity
            android:name="sara.damien.app.Requests3Activity"
            android:label="@string/title_activity_requests3"
            android:parentActivityName="sara.damien.app.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.TestActivity"
            android:label="@string/title_activity_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterManuallyActivity"
            android:label="@string/title_activity_register" >
        </activity>
    </application>

</manifest>
