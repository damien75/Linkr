<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sara.damien.app" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sara.damien.app.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="sara.damien.app.TopicActivity"
            android:label="@string/title_activity_topic"
            android:parentActivityName="sara.damien.app.WelcomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="WelcomeActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.RequestsActivity"
            android:label="@string/title_activity_suggestions"
            android:parentActivityName="sara.damien.app.TopicActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="TopicActivity" />
        </activity>
        <activity
            android:name="sara.damien.app.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
    </application>

</manifest>

