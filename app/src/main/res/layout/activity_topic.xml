<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sara.damien.app.TopicActivity"
    tools:ignore="MergeRootFrame">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTopic"

        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/enter_topic"
        android:id="@+id/textTopic"
        android:layout_gravity="center_horizontal|top"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#ff0200"
        android:textSize="24sp"
        android:textIsSelectable="false"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_meeting"
        android:id="@+id/buttonGoMeeting"
        android:layout_gravity="center_horizontal|bottom"
        android:onClick="displayProfile"/>
</FrameLayout>